# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation for javascript and css
[*.{js,css}]
indent_style = space
indent_size = 4

# 2 space indentation for html
[*.html]
indent_style = space
indent_size = 2

# 2 space indentation for json config files
[{package.json, manifest.json}]
indent_style = space
indent_size = 2
