{
  "name": "Minerva",
  "version": "1.0",
  "description": "Better Education",
  "permissions": ["tabs", "https://classroom.google.com/*", "https://*.youtube.com/*", "declarativeContent", "storage"],
  "page_action": {
    "default_icon": "images/brain.jpg",
    "default_title": "Minerva",
    "default_popup": "src/popups/MinervaMenu.html"
  },
  "content_scripts": [
    {
      "matches": ["https://classroom.google.com/*"],
      "run_at": "document_idle",
      "css": ["style/style.css", "style/webcam.css"],
      "js": ["src/content_scripts/GoogleClassroom.js"]
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "run_at": "document_idle",
      "css": ["style/style.css"],
      "js": ["src/content_scripts/StudyModeLocker.js"]
    }
  ],
  "background": {
    "scripts": ["src/background_scripts/background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z' 'sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV' 'sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0='; object-src 'self'" ,
  "web_accessible_resources": [
    "style/*.css",
    "src/embed_scripts/*.js",
    "src/images/*",
    "src/models/*"
  ],
  "manifest_version": 2
}
