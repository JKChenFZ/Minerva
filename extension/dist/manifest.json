{
  "name": "Minerva",
  "version": "1.0",
  "description": "Better Education",
  "permissions": ["tabs", "https://classroom.google.com/*", "https://*.youtube.com/*", "declarativeContent", "storage"],
  "page_action": {
    "default_icon": "images/brain.jpg",
    "default_title": "Minerva",
    "default_popup": "MinervaMenu.html"
  },
  "content_scripts": [
    {
      "matches": ["https://classroom.google.com/*"],
      "run_at": "document_idle",
      "css": ["style/VendorFontAwesome.css", "style/CommStyle.css", "style/CameraAndCanvas.css"],
      "js": ["js/VendorFontAwesome.js", "js/VendorYoutube.js", "js/GoogleClassroomContentScript.js"]
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "run_at": "document_idle",
      "css": ["style/CommStyle.css"],
      "js": ["js/StudyModeLocker.js"]
    }
  ],
  "background": {
    "scripts": ["js/Background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'sha256-t9UJPrESBeG2ojKTIcFLPGF7nHi2vEc7f5A2KpH/UBU=' 'sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z' 'sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV' 'sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' 'sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ=='; object-src 'self'" ,
  "web_accessible_resources": [
    "style/*.css",
    "images/*"
  ],
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
